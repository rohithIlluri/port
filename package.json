{
  "name": "port-fullstack",
  "version": "1.0.0",
  "description": "Full-stack chat application with React client and Node.js WebSocket server",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && node index.js",
    "client": "cd client && PORT=3001 npm start",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "build": "cd client && npm run build",
    "clean": "rm -rf node_modules client/node_modules server/node_modules client/build",
    "setup": "npm run install-all",
    "status": "node check-status.js"
  },
  "keywords": ["chat", "websocket", "react", "nodejs"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 